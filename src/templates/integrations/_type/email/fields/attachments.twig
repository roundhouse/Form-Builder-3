{% import "form-builder/_includes/_components" as components %}

{% set name = 'integrations[email]['~ index ~'][attachments]' %}
{% set enabled = attribute(form.integrations.email, index).attachments is defined and attribute(form.integrations.email, index).attachments ? true : false %}

{% set container = {
    title: 'Attachments' |t,
    info: null,
    icon: null,
    toggle: true,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'checkbox',
        name: name,
        value: '1',
        checked: enabled,
        class: 'hidden',
        id: null
    }
} %}

{% set modal = null %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}