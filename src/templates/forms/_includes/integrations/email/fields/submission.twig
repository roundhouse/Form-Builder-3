{% import "form-builder/_includes/_components" as components %}

{% set enabledName = 'notifications[email]['~ item ~'][includeSubmission]' %}
{% set enabled = attribute(form.notifications.email, item) is defined and attribute(form.notifications.email, item).includeSubmission ? true : false %}

{% set container = {
    title: 'Include Submission' |t,
    info: 'Should we include submission data in the email?',
    icon: null,
    toggle: true,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'checkbox',
        name: enabledName,
        value: '1',
        checked: enabled,
        class: 'hidden',
        id: null
    }
} %}

{% set modal = null %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}