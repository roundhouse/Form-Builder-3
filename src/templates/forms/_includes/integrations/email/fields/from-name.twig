{% import "form-builder/_includes/_components" as components %}

{% set name = 'notifications[email]['~ item ~'][fromName]' %}

{% set container = {
    title: 'From Name' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value: attribute(form.notifications.email, item) is defined and attribute(form.notifications.email, item).fromName != '' ? attribute(form.notifications.email, item).fromName : '',
        class: 'hidden',
        id: null,
        hint: 'NAME',
        required: true
    }
} %}

{% set modal = {
    title: 'From Name' |t,
    instructions: 'The sender’s name. Defaults to the Sender Name defined in Settings → Email.' |t,
    successMessage: 'From Name Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}