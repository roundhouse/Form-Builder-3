{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set title = "Dashboard"|t('form-builder') %}
{% set bodyClass = 'formbuilder fb-dashboard' %}

{% block header %}
    {% include 'form-builder/_includes/_header' ignore missing with { title: title } %}
{% endblock %}

{% block content %}
    <section class="flex-container">

        <div class="widget wide-col">
            <header class="pad">
                <h2>{{ "Submissions"|t('form-builder') }}</h2>
            </header>
            <div class="body">
                <div class="chart-explorer-container"></div>
            </div>
        </div>

        <div class="short-col">

            <div class="widget">
                <header class="pad">
                    <h2>{{ "Recent Submissions"|t('form-builder') }}</h2>
                    <a href="{{ url('form-builder/entries') }}" class="link">See all</a>
                </header>
                <div class="body">
                    {% set recentEntries = craft.formBuilder.entries({
                        limit: 5
                    }).all() %}

                    <div class="list">
                        {% for entry in recentEntries %}
                            {% set form = entry.getForm() %}
                            {% set group = form.getGroup() %}

                            <div class="list-item has-hover pad {% if loop.last %}last{% endif %}">
                                <div class="item-meta">
                                    <span class="item-meta-icon"><i class="far fa-list"></i></span>
                                    <span class="item-meta-title">{{ form.name }}</span>
                                </div>

                                <div class="item-title">
                                    <a href="{{ entry.url }}">{{ entry.title }}</a>
                                </div>
                            </div>
                        {% else %}
                            <div class="list-item pad">
                                <div class="item-title">
                                    <p>{{ "No submissions yet"|t('form-builder') }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

            <div class="widget">
                <header class="pad">
                    <h2>{{ "Form Builder News"|t('form-builder') }}</h2>
                </header>

                <div class="body">
                    <div class="list">
                        <div class="list-item has-hover pad">
                            <div class="item-meta">
                                <span class="item-meta-icon"><i class="far fa-cog"></i></span>
                                <span class="item-meta-title">{{ "Plugin Update"|t('form-builder') }}</span>
                                <span class="item-meta-right">March 23rd</span>
                            </div>
                            <div class="item-title">
                                <a href="#">Version 3.0.4 Released!</a>
                            </div>
                        </div>
                        <div class="list-item has-hover pad">
                            <div class="item-meta">
                                <span class="item-meta-icon"><i class="far fa-book"></i></span>
                                <span class="item-meta-title">{{ "Article"|t('form-builder') }}</span>
                                <span class="item-meta-right">Jan 13th</span>
                            </div>
                            <div class="item-title">
                                <a href="#">Form Builder hits top charts.</a>
                            </div>
                        </div>
                        <div class="list-item has-hover pad">
                            <div class="item-meta">
                                <span class="item-meta-icon"><i class="far fa-cog"></i></span>
                                <span class="item-meta-title">{{ "Plugin Update"|t('form-builder') }}</span>
                                <span class="item-meta-right">Jan 16th</span>
                            </div>
                            <div class="item-title">
                                <a href="#">Version 3.0.3 Released!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </section>
{% endblock %}
